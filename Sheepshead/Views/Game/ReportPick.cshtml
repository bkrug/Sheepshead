@model Sheepshead.Model.Hand
@using Sheepshead.Model.Players
@using Sheepshead.Model

@{
    ViewBag.Title = "Picker Found";
}

<fieldset>
    <div class="display-label">
        Starting Player
    </div>  
    <div class="display-field">
        Player @(Model.Game.Players.IndexOf(Model.StartingPlayer) + 1)
    </div>

    <div class="display-label">
        Human Player
    </div>
    <div class="display-field">
        Player @(Model.Game.Players.IndexOf(Model.Game.Players.First(p => p is IHumanPlayer)) + 1)
    </div>

    @if (Model.PickPhaseComplete && Model.Leasters)
    {
        <div class="display-label" />
        <div class="display-field">
            Leasters Hand
        </div>
    }

    @if (Model.PickPhaseComplete && Model.Picker != null)
    {
        <div class="display-label">
            Picker
        </div>
        <div class="display-field">
            Player @(Model.Game.Players.IndexOf(Model.Hand.Picker) + 1)
        </div>
    }

    @if (Model.PickPhaseComplete && Model.Partner != null)
    {
        <div class="display-label">
            Partner
        </div>
        <div class="display-field">
            Player @(Model.Game.Players.IndexOf(Model.Partner) + 1)
        </div>
    }

    @if (Model.PickPhaseComplete && Model.PartnerCard != null)
    {
        <div class="display-label">
            Partner Card
        </div>
        <div class="display-field">
            @(Model.PartnerCard.ToString())
        </div>
    }
</fieldset>