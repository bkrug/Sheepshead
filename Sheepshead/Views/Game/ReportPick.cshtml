@model Sheepshead.Models.Hand
@using Sheepshead.Models

@{
    ViewBag.Title = "Picker Found";
}

<h2>We have a Picker!</h2>

<fieldset>
    <div class="display-label">
        Starting Player
    </div>  
    <div class="display-field">
        Player @(Model.Deck.Game.Players.IndexOf(Model.Deck.StartingPlayer) + 1)
    </div>

    <div class="display-label">
        Human Player
    </div>
    <div class="display-field">
        Player @(Model.Deck.Game.Players.IndexOf(Model.Deck.Game.Players.First(p => p is IHumanPlayer)) + 1)
    </div>

    <div class="display-label">
        Picker
    </div>
    <div class="display-field">
        Player @(Model.Deck.Game.Players.IndexOf(Model.Picker) + 1)
    </div>
</fieldset>

@Html.ActionLink("Continue Playing", "PlayTrick", new { id = Model.Deck.Game.Id })