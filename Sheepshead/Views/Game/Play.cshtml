@model Sheepshead.Model.TurnState
@using Sheepshead.Model
@switch (Model.TurnType) {
    case TurnType.BeginHand:
        Html.RenderPartial("BeginDeck", Model.Hand);
        break;
    case TurnType.Pick:
        Html.RenderPartial("Pick", Model);
        break;
    case TurnType.Bury:
        Html.RenderPartial("Bury", Model);
        break;
    case TurnType.PlayTrick:
        Html.RenderPartial("PlayTrick", Model);
        break;
    default:
        throw new ApplicationException("If you got this far something is wrong.");
}
