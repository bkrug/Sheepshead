{
  "compilerOptions": {
    //I'm setting this true so React Dnd doesn't create compile errors.
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    //I'm setting this true so React Dnd doesn't create compile errors.
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": [ "webpack-env" ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}
